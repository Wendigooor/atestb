<% @all_campaigns.each do |c| %>
  <tr>
    <td style="min-width:100px"># <%= c.id %></td>
    <td class=<%="#{c.id}"%>><%= c.client.username %></td>
    <td><%= c.caption %></td>
    <td><%= c.approved %></td>
    <td><%= c.started %></td>
    <td><div class=<%="#{c.id}purchased"%>><%= c.purchased %></div></td>
    <td><%= c.showed %></td>
    <td><input type="text" class=<%="#{c.id}"%> ></td>
    <td><%= link_to 'Delete', client_campaign_path(current_client, c), :method => :delete, :confirm => 'Are you sure?', :class => "btn btn-sm btn-danger" %></td>
    <td><%= link_to 'Edit', edit_client_campaign_path(current_client, c), :class => 'btn btn-success' %></td>
    <td><%= link_to 'Purchase this campaign', purchases_path, :class => 'purchase btn btn-primary', :confirm => 'Are you sure?' %></td>
    <td><%= link_to 'Show', client_campaign_path(current_client, c), :class => 'btn btn-primary' %></td>
    <td><%= link_to 'Statistic', client_campaign_statistics_path(c.client, c), :class => 'btn btn-info' %></td>
    <td>
        <% if c.started %>
            <%= link_to 'Pause', campaign_activates_path(c), :method => :post, :class => 'btn btn-sm btn-success' %>
        <% else %>
            <%= link_to 'Start', campaign_activates_path(c), :method => :post, :class => 'btn btn-sm btn-success' %>
        <% end %>
    </td>
    <td>
        <% if c.started && c.approved %>
            <%= link_to 'Unapprove', campaign_approves_path(c, :path => client_campaigns_path(current_client)), :method => :post, :class => 'btn btn-sm btn-danger' %>
        <% end %>
    </td>
    <td>
        <% if c.started && c.approved %>
            <%= image_tag "icon_ok.png" %>
        <% end %>
    </td>
  </tr>
<% end %>

  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td>Total:</td>
    <td><%= @purchased_sum %></td>
    <td><%= @showed_sum %></td>
  </tr>

</table>

