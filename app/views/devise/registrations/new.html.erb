<div class="container">

<%= form_for(resource, :as => resource_name, :html => {class:"form-signin"}, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<h2 class:"form-signin-heading">Registration</h2>

  <div>
    <%= f.text_field :username, :autofocus => true, class:"form-control", placeholder:"Username" %>
  </div>
  <div>
    <%= f.email_field :email, class:"form-control", placeholder:"Email address" %>
  </div>
  <div>
    <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
  </div>
  <div>
    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Confirm password" %>
  </div>
  <div>
    <%= f.check_box :developer %> Developer
  </div>
  </br>
  <div>
    <%= f.submit "Sign up", class:"btn btn-lg btn-primary btn-block" %>
  </div>


<hr>

<%= render "devise/shared/links" %>

<% end %>

</div>
