

<%= form_for(resource, :as => resource_name, :html => {class:"form-signin"}, :url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<h2 class:"form-signin-heading">Registration</h2>

<div class="col-xs-4">
  <%= f.text_field :username, :autofocus => true, class:"form-control", placeholder:"Username" %>
</div>
<div class="clearfix"></div>
<div class="col-xs-4">
  <%= f.email_field :email, class:"form-control", placeholder:"Email address" %>
</div>
<div class="clearfix"></div>
<div class="col-xs-4">
  <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
</div>
<div class="clearfix"></div>
<div class="col-xs-4">
  <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Confirm password" %>
</div>
<div class="clearfix"></div>
<div class="col-xs-4">
  <label class="checkbox-inline">
    <%= f.check_box :developer %> Developer
  </label>
</div>
<div class="clearfix"></div>
<div class="col-xs-4">
  <%= f.submit "Sign up", class:"btn btn-lg btn-primary btn-block" %>
</div>

<div class="clearfix"></div>
<hr />

<%= render "devise/shared/links" %>

<% end %>

