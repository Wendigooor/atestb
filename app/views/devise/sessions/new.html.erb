
<%= form_for(resource, :as => resource_name, :html => {class:"form-signin"}, :url => session_path(resource_name)) do |f| %>

<h2 class:"form-signin-heading">Please sign in</h2>

<div class="col-xs-4">
	<%= f.email_field :email, :autofocus => true, class:"form-control", placeholder:"Email address" %>
</div>
<div class="clearfix"></div>
<div class="col-xs-4">
	<%= f.password_field :password, class:"form-control", placeholder:"Password" %>
</div>
<div class="clearfix"></div>
<div class="col-xs-4">
	<% if devise_mapping.rememberable? %> 
		<label class="checkbox">
			<%= f.check_box :remember_me %> Remember Me
		</label>
	<% end %>
</div>
<div class="clearfix"></div>
<div class="col-xs-4">
	<%= f.submit "Sign in", class:"btn btn-lg btn-primary btn-block" %>
</div>
<div class="clearfix"></div>
<hr />

<%= render "devise/shared/links" %>

<% end %>
