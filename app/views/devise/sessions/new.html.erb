<div class="container">

<div style="color:#FF0000" class="centre">
  <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
  <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
  <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
</div>
</br>

<%= form_for(resource, :as => resource_name, :html => {class:"form-signin"}, :url => session_path(resource_name)) do |f| %>
<h2 class:"form-signin-heading">Please sign in</h2>
<%= f.email_field :email, :autofocus => true, class:"form-control", placeholder:"Email address" %>
<%= f.password_field :password, class:"form-control", placeholder:"Password" %>

</br>
<% if devise_mapping.rememberable? %> 
    <label class="checkbox">
        <%= f.check_box :remember_me %> Remember Me
    </label>
<% end %>

</br>
</br>
<%= f.submit "Sign in", class:"btn btn-lg btn-primary btn-block" %>

<hr>

<%= render "devise/shared/links" %>

<% end %>

</div>