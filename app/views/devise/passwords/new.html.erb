<div class="container">

<h2 class:"form-signin-heading">Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :html => {class:"form-signin"}, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div>
  	<%= f.email_field :email, :autofocus => true, class:"form-control", placeholder:"Email address" %>
  </div>
  <div>
  	<%= f.submit "Resend confirmation instructions", class:"btn btn-lg btn-primary btn-block" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>

</div>
