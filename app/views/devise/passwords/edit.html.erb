<div class="container">

<h2 class:"form-signin-heading">Change your password</h2>

<%= form_for(resource, :as => resource_name, :html => {class:"form-signin"}, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.password_field :password, :autofocus => true, class:"form-control", placeholder:"New password" %>
  </div>
  <div>
    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Confirm new password" %>
  </div>
  <div>
  	<%= f.submit "Change my password", class:"btn btn-lg btn-primary btn-block" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>

</div>
