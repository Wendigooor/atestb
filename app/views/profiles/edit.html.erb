
<%= form_for @profile, url: client_profile_path(@client, @profile), :method => :put do |f| %>
  <%= f.label :company %>
  <%= f.text_field :company %>
  </br>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </br>
  <%= f.label :address %>
  <%= f.text_field :address %>
  </br>
  <%= f.label :description %>
  <%= f.text_area :description, size: "42x12" %>
  </br>
  <%= f.submit "Update" , :class => "btn btn-success"%>
  </br>  
<% end %>

<%= link_to 'Back', client_path(current_client), :class => 'btn btn-primary btn-sml' %>
